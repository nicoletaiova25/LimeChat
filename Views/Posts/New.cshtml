@model LimeChat.Models.Post
@{
    ViewBag.Title = "Adaugare postare";
}

<style>
    body {
        background: url('/images/template.png') no-repeat center center fixed;
        background-size: cover;
        color: black; /* Adjust text color for visibility */
    }

    .video-bg {
        position: fixed;
        right: 0;
        bottom: 0;
        max-width: 300%;
        max-height: 300%;
        z-index: -1;
        opacity: 0; /* Adjust the opacity as needed */
    }
</style>

<h2 class="text-center mt-5">Adaugare postare</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Posts",
            method: FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", new{@class="text-danger"})

                <br />

                @Html.Label("PostContent", "Continutul postarii pe care doresti o adaugi")
                <br />
                @Html.TextArea("PostContent", null, new { @class = "form-control" })

                @Html.ValidationMessage("PostContent", null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn culoaresus" type="submit">Adauga postare</button>

            }

        </div>
    </div>
</div>








