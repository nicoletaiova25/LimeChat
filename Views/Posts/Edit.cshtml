@model LimeChat.Models.Post
@{
    ViewBag.Title = "Editare postare";
}
<h2 class="text-center mt-5 fontbun culoarebuna">Editare postare</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3 ">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Posts",
            method: FormMethod.Post,
            routeValues: new { id = Model.PostId }))
            {
                /* @Html.HiddenFor(m => m.Id)  */


                @Html.Label("PostContent", "Continut postare" ,new { @class = "fontbun" })
                <br />
                @Html.Editor("PostContent", new { htmlAttributes = new { @class = "form-control fontbun" } })

                @Html.ValidationMessageFor(p => p.PostContent, null, new { @class = "text-danger" })
                <br />

                <br />
                <div class="justify-content-center d-flex">
                <button class="btn btn-sm  culoaresus" type="submit">Modifica articol</button>
                </div>
            }
        </div>
    </div>
</div>




