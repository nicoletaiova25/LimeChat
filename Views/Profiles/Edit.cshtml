@model LimeChat.Models.Profile
@{
    ViewBag.Title = "Editare profil";
}

<style>
    .col-md-6{
        display:block;
    }

    body {
        background: url('/images/template.png') no-repeat center center fixed;
        background-size: cover;
        color: white; /* Adjust text color for visibility */
    }

    .video-bg {
        position: fixed;
        right: 0;
        bottom: 0;
        max-width: 300%;
        max-height: 300%;
        z-index: -1;
        opacity: 0; /* Adjust the opacity as needed */
    }
    /* Stilizare pentru buton */
    .btn {
        background-color: deeppink;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 6px;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #ff6b9c; /* Roz mai intens la hover */
        }

    /* Stilizare pentru formular */
    .form-control {
        width: 100%;
        padding: 12px;
        margin: 8px 0;
        border: 2px solid deeppink; /* Grosimea bordurii crescută */
        border-radius: 10px; /* Forma mai rotunjita */
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #ff6b9c; /* Roz mai intens la focus */
        }

    /* Stilizare pentru checkbox */
    .form-checkbox {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        width: 20px;
        height: 20px;
        border: 2px solid deeppink;
        border-radius: 50%; /* Forma de cerc */
        transition: border-color 0.3s;
        vertical-align: middle;
        cursor: pointer;
    }

        .form-checkbox:checked {
            background-color: deeppink; /* Umplerea cu roz când este bifată */
        }

        .form-checkbox:focus {
            border-color: #ff6b9c; /* Roz mai intens la focus */
        }

    /* Stilizare pentru etichetele din formular */
    label {
        font-size: 18px;
        color: deeppink;
        font-weight: bold;
    }

    /* Stilizare pentru iconuri */
    .fa-icon {
        color: deeppink;
        margin-right: 10px;
    }
</style>
<h2 class="text-center mt-5">Editare Profil</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Profiles",
            method: FormMethod.Post,
            routeValues: new { id = Model.ProfileId }))
            {
                @Html.ValidationSummary(false, "", new{@class="text-danger"})

                <br />

                @Html.Label("ProfileName", "Nume")
                <br />
                @Html.TextArea("ProfileName", null, new { @class = "form-control" })

                @Html.ValidationMessage("ProfileName", null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("ProfileUsername", "Username")
                <br />
                @Html.TextArea("ProfileUsername", null, new { @class = "form-control" })

                @Html.ValidationMessage("ProfileUsername", null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("ProfilePublic", "Public")
                <br />
                @Html.TextArea("ProfilePublic", null, new { @class = "form-control" })

                @Html.ValidationMessage("ProfilePublic", null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("ProfileBio", "Despre")
                <br />
                @Html.TextArea("ProfileBio", null, new { @class = "form-control" })

                @Html.ValidationMessage("ProfileBio", null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn culoaresus" type="submit">Editeaza profil</button>

            }
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
