        }*@




        @if (Model.UserId == ViewBag.UserCurent)
        {
            <div class="d-flex culoarebuton flex-row justify-content-between p-3 border-1 border-top">
                <a class="btn  culoaresus  d-flex justify-content-center text-light m-3 w-50" href="/Profiles/All/@Model.UserId">Afiseaza prieteni</a>
                <a class="btn  culoaresus  d-flex justify-content-center text-light m-3 w-50" href="/Profiles/Request">Afiseaza cereri</a>
