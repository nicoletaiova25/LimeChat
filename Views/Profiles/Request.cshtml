@model LimeChat.Models.Profile
@{
    ViewBag.Title = "Cereri prietenie";
}

<style>
    body {
        background: url('/images/template.png') no-repeat center center fixed;
        background-size: cover;
        color: white; /* Adjust text color for visibility */
    }

    h2 {
        display: block;
    }

    .video-bg {
        position: fixed;
        right: 0;
        bottom: 0;
        max-width: 300%;
        max-height: 300%;
        z-index: -1;
        opacity: 0; /* Adjust the opacity as needed */
    }

    .fontbun1 {
        color: black; /* Font negru */
    }

    .container4 {
        background-color: rgba(255, 255, 255, 0.8); /* Fundal alb semi-transparent */
        border-radius: 10px;
        padding: 15px;
        margin: 10px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn {
        background-color: #ff69b4; /* Culoare roz */
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s;
        font-size: 16px;
    }

        .btn:hover {
            background-color: #ff1493; /* Roz mai intens */
        }
</style>

<h2 class="fontbun1 culoarebuna">Afisare Cereri</h2>
@if (ViewBag.Prietenie == null || ViewBag.Prietenie.Count == 0)
{
    <p class="fontbun1">Momentan nu există cereri de prietenie.</p>
}
else
{
    @foreach (var pr in ViewBag.Prietenie)
    {
        <div class="container4 d-flex marg flex-row justify-content-between">
            <h2 class="row m-3 d-flex fontbun1 justify-content-between position-relative">♡ @pr.ProfileName</h2>
            <form method="post" action="/Profiles/AcceptFr/@pr.UserId">
                <button class="btn m-3 d-flex justify-content-between position-relative row" type="submit">Accepta cererea</button>
            </form>
            <form method="post" action="/Profiles/DeleteFr/@pr.UserId">
                <button class="btn m-3 d-flex justify-content-between position-relative row" type="submit">Refuza cererea</button>
            </form>
        </div>
        <br />
    }
}
