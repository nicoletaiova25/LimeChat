@model LimeChat.Models.Group

@{
    ViewBag.Title = "Members";
}

<style>
    body {
        background: url('/images/template.png') no-repeat center center fixed;
        background-size: cover;
        color: white; /* Adjust text color for visibility */
    }

    h2 {
        display: block;
    }

    .video-bg {
        position: fixed;
        right: 0;
        bottom: 0;
        max-width: 300%;
        max-height: 300%;
        z-index: -1;
        opacity: 0; /* Adjust the opacity as needed */
    }
</style>

<h2 class="culoarebuna culoarebuna fontbun1">Memberi din @Model.GroupName</h2>

<a class="btn culoarebuton2 justify-content-end d-flex " href="/Groups/Show/@Model.GroupId"> Inapoi la Grup</a>
<br />
<hr class="linie-footer" />
@if (ViewBag.Usersss != null)
{
    @foreach (var user in ViewBag.Usersss)
    {   
        <div class=" card-header4 culoarebuna fontbun1 card-text">@user.UserName</div>
        <br />
    }
}
else
{
    <h2 class="culoarebuna fontbun1">Nu exista membri</h2>
}
