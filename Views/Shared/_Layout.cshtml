<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LimeChat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css">
    <!--<link rel="stylesheet" href="~/LimeChat.styles.css" asp-append-version="true" />-->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <style>
        .col-md-6{
            display:none;
        }

        .navbar {
            background-color: deeppink;
        }

            .navbar .navbar-brand, .navbar .nav-link {
                color: white;
            }

                .navbar .navbar-brand:hover, .navbar .nav-link:hover {
                    color: lightpink;
                }

        .footer {
            background-color: deeppink;
            color: white;
        }

            .footer a {
                color: lightpink;
            }

                .footer a:hover {
                    color: deeppink;
                }

       #login-submit{
       background-color: pink;
       }

       a{
           color: deeppink;
       }

       h2{
           display: none;
       }

        .video-bg {
            position: fixed;
            right: 0;
            bottom: 0;
            max-width: 300%;
            max-height: 300%;
            z-index: -1;
            opacity: 0.5; /* Adjust the opacity as needed */
        }

        .custom-container {
            position: relative;
            z-index: 1;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LimeChat</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index">Afisare postari</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Profiles" asp-action="Index">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Groups" asp-action="Index">Groups</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Profiles" asp-action="SearchBar">Cauta profil</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <video autoplay muted loop class="video-bg">
            <source src="/images/LChat.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <main role="main" class="pb-3 custom-container">
            @RenderBody()
        </main>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
